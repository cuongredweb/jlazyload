<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" client="site" group="system" type="plugin" method="upgrade">
    <name>PLG_JLAZYLOAD</name>
    <version>1.0</version>
    <creationDate>JULY 2014</creationDate>
    <author>Kyle Hoang</author>
    <copyright>https://github.com/kylephp</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>PLG_JLAZYLOAD_DESC</description>
    <files>
        <filename plugin="jlazyload">jlazyload.php</filename>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_jlazyload.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_jlazyload.sys.ini</language>
    </languages>
    <media destination="jlazyload" folder="media/jlazyload">
        <folder>js</folder>
        <folder>images</folder>
    </media>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="load_jquery" type="list" default="1" label="PLG_JLAZYLOAD_LOAD_JQUERY" description="PLG_JLAZYLOAD_LOAD_JQUERY_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>